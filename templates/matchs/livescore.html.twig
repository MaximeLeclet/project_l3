{% extends 'base.html.twig' %}

{% block title %} Football Livescore {% endblock %}
{% block body %}
    <br><br>
    <div class="container">
        <table id="livescore" class="table table-bordered">
            <thead>
                <tr row-name>
                    <th>#</th>
                    <th class="text-center">date</th>
                    <th class="text-center">Direct</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% set i = 1 %}
            {% for equipes in results %}
            {% for equipe,match in equipes %}
                <tr row-content>
                    <td class="text-center">{{ i }}</td>
                    <td class="text-center">{{ match.date }}</td>
                    <td class="text-center">{{ (match.live == true ) ? '<span class="label label-success">Non</span>' : '<span class="label label-danger">Non</span>' }} </td>
                    <td class="text-center">{{ equipe }}</td>
                    <td class="text-center">  {{ match.score.0 }} - {{ match.score.1 }} </td>
                    <td class="text-center">{{ match.vs }}</td>
                    <td class="text-center">
                        <a class="btn btn-info edit" href="{{ path('app_pari_new', {'equipe1':equipe, 'equipe2':match.vs }) }}" aria-label="Settings">
                            Parier
                        </a>
                    </td>
                </tr>
            {% endfor %}
                {%  set i = i + 1 %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}