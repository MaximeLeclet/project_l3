{% extends 'base.html.twig' %}

{% block title %} Football Livescore {% endblock %}
{% block body %}
    <br><br>
    <div class="container">
        <br><br><div class="row">
        <table id="livescore" class="table table-striped">
            <thead>
                <tr class="row-name">
                    <th>#</th>
                    <th class="text-center">Date</th>
                    <th class="text-center">Live</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% set i = 1 %}
            {% for game in results %}
                <tr row-content>
                    <td class="text-center">{{ i }}</td>
                    <td class="text-center">{{ game.date|date("d/m/Y") }}</td>
                    <td class="text-center">{{ (game.live == true ) ? '<span class="label label-success">Non</span>' : '<span class="label label-danger">Non</span>' }} </td>
                    <td class="text-center">{{ game.team1 }}</td>
                    <td class="text-center">  {{ game.score1 }} - {{ game.score2 }} </td>
                    <td class="text-center">{{ game.team2 }}</td>
                    <td class="text-center">
                        {%  if (game.live != true and game.score1 == null and game.score2 == null and date(game.date) < date('now', 'Europe/Paris')) %}
                        <a style="margin-right: 15px;" href="{{ path('app_pari_new', {'equipe1':equipe, 'equipe2':match.vs }) }}" class="btn btn-top btn-primary btn-success pull-right">
                            <span class="glyphicon glyphicon-eur"></span> &nbsp Parier
                        </a>
                        {% else %}
                            <a disabled style="margin-right: 15px;" href="#" class="btn btn-top btn-primary btn-success pull-right">
                                <span class="glyphicon glyphicon-eur"></span> &nbsp Pari Non disponible
                            </a>
                        {%  endif %}
                    </td>
                </tr>
                {%  set i = i + 1 %}
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
{% endblock %}