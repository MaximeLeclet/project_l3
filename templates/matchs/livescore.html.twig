{% extends 'base.html.twig' %}

{% block title %} Football Livescore {% endblock %}
{% block body %}
    <br><br>
    <div class="container">
        <table id="livescore" class="table table-bordered">
            <thead style="background: red">
                <tr>
                    <th>#</th>
                    <th>date</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% set i = 1 %}
            {% for equipes in results %}
            {% for equipe,match in equipes %}
                <tr>
                    <td class="text-center">{{ i }}</td>
                    <td class="text-center">{{ match.date }}</td>
                    <td class="text-center"><span class="label label-success">{{ match.live }}</span> </td>
                    <td class="text-center">{{ equipe }}</td>
                    <td class="text-center">  {{ match.score.0 }} - {{ match.score.1 }} </td>
                    <td class="text-center">{{ match.vs }}</td>
                    <td class="text-center"><button class="btn btn-info btn-xs" data-title="" >Parier</button></td>
                </tr>
            {% endfor %}
                {%  set i = i + 1 %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}