{% extends "base.html.twig" %}

{% block title %}

    Page des paris

{% endblock %}

{% block body %}

    <div class="well">

        <legend><i class="" aria-hidden="true"></i> Modifier un pari</legend>

        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.equipe1) }}
            <br>
            {{ form_widget(form.equipe1, {'disabled': 'true'}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.equipe2) }}
            <br>
            {{ form_widget(form.equipe2, {'disabled': 'true'}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.score_equipe1) }}
            <br>
            {{ form_widget(form.score_equipe1) }}
        </div>

        <div class="form-group">
            {{ form_label(form.score_equipe2) }}
            <br>
            {{ form_widget(form.score_equipe2) }}
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-sign-in" aria-hidden="true"></i> Valider
        </button>

        {{ form_end(form) }}

    </div>

{% endblock %}